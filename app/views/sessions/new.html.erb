<%= provide(:title,"Log in") %>
<div class="row">
	<%= form_for :session, url: sessions_create_path do |session| %>
	<%= session.label :email %>
	<%= session.text_field :email %>

	<div style="display: inline-block;">
		<%= session.label :password %><%= link_to "forget password", new_password_reset_path %>
	</div>
	<%= session.password_field :password %>

	<div style="float:left; display:flex; "> <%= session.check_box :remember_me %><span>remember me</span></div>


	<%= session.submit "Log in" %>
</div>
<p style="text-align: center">New user? <%= link_to "Sign up now!", new_user_path %></p>
<% end %>
